<%- include('includes/head') %> 
<%- include('includes/navbar') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Agenda</h1>
      <p class="text-center lead">Seus contatos est√£o abaixo:</p>

      <%- include('includes/messages') %>
    </div>

    <div class="table-responsive">
      
      <table class="table my-3">
        <% if (contacts.length > 0) { %>
          <% contacts.forEach((contact) => { %>
            <tr>
              <td><%= contact.name %></td>
              <td><%= contact.lastName %></td>
              <td><%= contact.email %></td>
              <td><%= contact.tel %></td>
              <td>
                <a href="/contact/index/<%= contact._id %>" class="btn btn-success">Editar</a>
              </td>
              <td>
                <a href="/contact/delete/<%= contact._id %>" class="btn btn-danger">Excluir</a>
              </td>
            </tr>
          <% }); %>
        <% } else { %>
          <p class="text-center lead">Sem contatos cadastrados. Clique <a href="/contact/index" >aqui</a> para cadastrar um novo contato</p>
          
        <% } %>
      </table>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
